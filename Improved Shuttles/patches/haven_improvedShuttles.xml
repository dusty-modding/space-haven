<Patch>
  <Operation Class="AttributeSet">
    <!-- Shuttle Crew Capacity -->
    <xpath>/data/Craft/craft[@cid="20"]</xpath>
    <attribute>passengers</attribute>
    <value>{shuttleCrew}</value>
  </Operation>
  <Operation Class="AttributeSet">
    <!-- Shuttle Oxygen Capacity -->
    <xpath>/data/Craft/craft[@cid="20"]/oxygen[@maxOxygen="10000"]</xpath>
    <attribute>maxOxygen</attribute>
    <value>{shuttleOxygen}</value>
  </Operation>
  <Operation Class="AttributeSet">
    <!-- Shuttle Carry Capacity -->
    <xpath>/data/Craft/craft[@cid="20"]/stores</xpath>
    <attribute>capacity</attribute>
    <value>{shuttleCapacity}</value>
  </Operation>
  <Operation Class="AttributeSet">
    <!-- Miner Oxygen Capacity -->
    <xpath>/data/Craft/craft[@cid="39"]/oxygen[@maxOxygen="4000"]</xpath>
    <attribute>maxOxygen</attribute>
    <value>{minerOxygen}</value>
  </Operation>
  <Operation Class="AttributeSet">
    <!-- Miner Carry Capacity -->
    <xpath>/data/Craft/craft[@cid="39"]</xpath>
    <attribute>oreStorageSize</attribute>
    <value>{minerCapacity}</value>
  </Operation>
</Patch>
