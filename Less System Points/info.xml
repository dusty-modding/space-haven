<mod>
  <name>LessSystemPoints</name>
  <description>Modifies System Point requirements for modules and guns, now supports configuration!</description>
  <minimumLoaderVersion>0.10.0</minimumLoaderVersion>
  <version>0.6.0</version>
  <author>Killparadise</author>
  <config>
    <var default="0" name="{x1PGen}" value="0">X1 Power Generator</var>
    <var default="0" name="{x2PGen}" value="0">X2 Power Generator</var>
    <var default="0" name="{x3PGen}" value="0">X3 Power Generator</var>
    <var default="0" name="{energiumGen}" value="0">Energium Power Generator</var>
    <var default="0" name="{x1hyper}" value="0">X1 Hyperdrive</var>
    <var default="0" name="{hHyper}" value="0">Hyperium Hyperdrive</var>
    <var default="2" name="{hStabilizer}" value="2">Hull Stabilizer</var>
    <var default="0" name="{pcn}" value="0">Power Capacity Node</var>
    <var default="0" name="{spn}" value="0">Small Power Node</var>
    <var default="1" name="{lpn}" value="1">Large Power Node</var>
    <var default="1" name="{autoTurret}" value="1">Auto Turret</var>
    <var default="1" name="{smallShieldGen}" value="1">Small Shield Generator</var>
    <var default="1" name="{energyTurret}" value="1">Energy Turret Cost</var>
    <var default="1" name="{missleTurret}" value="1">Missle Turret Cost</var>
    <var default="1" name="{shieldGen}" value="1">Shield Generator Cost</var>
    <var default="1" name="{scanner}" value="1">Scanner Cost</var>
    <var default="1" name="{jammer}" value="1">Target Jammer Cost</var>
    <var default="2" name="{fighterCraft}" value="2">Fighter Craft Cost</var>
  </config>
</mod>
